{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch debug.",
			"preLaunchTask": "Build debug.",
			"type": "cppdbg",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/bag_to_pcap_debug.bin",
			"args": [
				"input.bag",
				"output.pcap"
			],
			"stopAtEntry": false,
			"externalConsole": false,
			"miDebuggerPath": "/usr/bin/gdb",
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}
